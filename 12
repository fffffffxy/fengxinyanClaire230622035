  <script>
    // small utilities
    function q(sel, el=document){return el.querySelector(sel)}
    function qa(sel, el=document){return Array.from(el.querySelectorAll(sel))}

    // Carousel
    (function(){
      const slidesWrap = q('.slides');
      const slides = qa('.slide');
      const prevBtn = q('.prev');
      const nextBtn = q('.next');
      const dotsWrap = q('.dots');
      const total = slides.length;
      let idx = 0; let timer = null; const interval = 4500;

      function go(i){
        idx = (i + total) % total;
        slidesWrap.style.transform = `translateX(${ -idx * 100 }%)`;
        updateDots();
      }
      function next(){ go(idx+1) }
      function prev(){ go(idx-1) }
      function makeDots(){
        for(let i=0;i<total;i++){
          const d = document.createElement('button'); d.className='dot'; d.setAttribute('aria-label','第'+(i+1)+'张'); d.addEventListener('click',()=>{go(i);resetTimer()});
          dotsWrap.appendChild(d);
        }
      }
      function updateDots(){
        qa('.dot').forEach((el,i)=>el.classList.toggle('active', i===idx));
      }
      function resetTimer(){ clearInterval(timer); timer = setInterval(next, interval) }

      makeDots(); updateDots(); timer = setInterval(next, interval);

      nextBtn.addEventListener('click', ()=>{ next(); resetTimer() });
      prevBtn.addEventListener('click', ()=>{ prev(); resetTimer() });

      // keyboard support
      slidesWrap.addEventListener('keydown', (e)=>{
        if(e.key==='ArrowLeft') { prev(); resetTimer() }
        if(e.key==='ArrowRight'){ next(); resetTimer() }
      });

      // pause on focus/hover
      slidesWrap.addEventListener('mouseenter', ()=>clearInterval(timer));
      slidesWrap.addEventListener('mouseleave', resetTimer);
    })();

    // Contact form (client-side validation + mailto fallback)
    (function(){
      const form = q('#contactForm');
      const feedback = q('#formFeedback');
      form.addEventListener('submit', (e)=>{
        e.preventDefault();
        const data = new FormData(form);
        const name = data.get('name').trim();
        const email = data.get('email').trim();
        const message = data.get('message').trim();

        if(!name || !email || !message){
          feedback.textContent = '请完整填写所有字段。'; feedback.style.color = '#fca5a5'; return;
        }
        if(!/^\S+@\S+\.\S+$/.test(email)){ feedback.textContent='请输入有效电邮地址。'; feedback.style.color='#fca5a5'; return }

        // If you have a form backend (Formspree / Netlify Forms / etc.) replace the code below
        // For demo, open mail client with prefilled content
        const subject = encodeURIComponent('网站联系：' + name);
        const body = encodeURIComponent('姓名: '+name+'\n电邮: '+email+'\n\n'+message);
        const mailto = `mailto:hello@example.com?subject=${subject}&body=${body}`;

        // try to open mail client
        window.location.href = mailto;
        feedback.textContent = '已尝试打开邮件客户端；若未打开，请手动发送至 hello@example.com'; feedback.style.color='#bde6ea';
        form.reset();
      });
    })();

    // set year
    document.getElementById('year').textContent = new Date().getFullYear();

  </script>
</body>
